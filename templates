#include <iostream>
using namespace std;
template<class T,int n>
void sort(T (&arr)[n]) {
	for(int i=0;i<n;i++){
		int min=i;
		for(int j=i+1;j<n;j++)
		{
			if(arr[j]<arr[min])
			{
				min=j;
			}
		}
		  if (min != i) {
		           T temp=arr[i];
		           arr[i]=arr[min];
		           arr[min]=temp;
	}
}
	for (int i = 0; i < n; i++) {
		    cout << arr[i] << " ";
		    }
}
int main() {
	   int nums[] = {64, 25, 12, 22, 11};
	    cout << "After sorting: ";
	    sort(nums);
	    float num[]={56.7,90.0,44.34,21.67,78.45};
	    cout<<"\nAfter sorting";
	    sort(num);
	return 0;
}

